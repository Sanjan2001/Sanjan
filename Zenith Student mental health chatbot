//script1.js file
const chatMessages = document.getElementById("chatMessages");

    function sendMessage() {
      const userInput = document.getElementById("userInput");
      const userMessage = userInput.value.trim();

      if (userMessage) {
        // Display user's message
        addMessage(userMessage, "user-message");

 // Simulate bot response
        setTimeout(() => {
          const botResponse = getBotResponse(userMessage);
          addMessage(botResponse, "bot-message");
        }, 500);

        // Clear input field
        userInput.value = "";
      }
    }

    function addMessage(message, className) {
      const messageElement = document.createElement("div");
      messageElement.className = className;
      messageElement.textContent = message;
      chatMessages.appendChild(messageElement);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    }

    function getBotResponse(message) {
      const lowerCaseMessage = message.toLowerCase();
  // Greeting
  if (lowerCaseMessage.includes("hi") || lowerCaseMessage.includes("hello") || lowerCaseMessage.includes("hey")) {
    return getRandomResponse([
      "Hey, what can I do for you today?",
      "I'm here for you! Tell me what's on your mind.",
      "What’s up? How can I assist you right now?"
    ]);
  }
  // Exam, Exam Tension, Exam Pressure
else if (
  lowerCaseMessage.includes("exam") || 
  lowerCaseMessage.includes("exams") || 
  lowerCaseMessage.includes("test") || 
  lowerCaseMessage.includes("exam tension") || 
  lowerCaseMessage.includes("exam pressure") || 
  lowerCaseMessage.includes("studying")
) {
  return getRandomResponse([
    "Exams are challenging, but you’ve got this! Focus on one topic at a time, and take short breaks to recharge.",
    "Feeling the pressure of exams is normal. Try deep breathing exercises to calm your mind and improve focus.",
    "Remember, exams are just a part of your journey. Do your best, but don’t let the pressure overwhelm you.",
    "Tension before exams is common, but planning a study schedule and sticking to it can ease the stress.",
    "Exams can feel intense, but trust your preparation and focus on what you’ve already learned—you’re ready for this!"
  ]);
}
// Grades
else if (
  lowerCaseMessage.includes("grades") || 
